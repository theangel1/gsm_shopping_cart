@model List<GSM.Models.Building>
@{
    ViewData["Title"] = "Página de Inicio";
}
<br />


<div class="container">
    <div class="col-sm text-center">
        <img src="~/images/logo.png" width="30%" />
    </div>
    <h4 class="display-4">¡Bienvenidos a nuestro portal de compra de casas!</h4>
    <p class="lead">Nuestros medios de pagos actuales: </p>
    <div class="form-group text-center">
        <img src="~/images/webpay.png" width="20%" />
        <img src="~/images/PayPalLogo1200.jpg" width="20%" />
    </div>

</div>



<div class="container" style="width:80%">
    <div class="col-sm">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 rounded-circle" src="~/images/ProductImage/2004.png" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Oferta 1</h5>
                        <p>Comprar</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img class="d-block w-100 rounded-circle" src="~/images/ProductImage/2005.png" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Oferta 2</h5>
                        <p>Comprar</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<hr />
<div class="row">

    @foreach (var building in Model)
    {
        <div class=" col-sm-4">
            <div class="card border-info mb-3" style="max-width: 18rem;">
                <div class="card-header">
                    <h6 class="text-center"> @building.Descripcion</h6>
                </div>
                <img class="card-img-top" src="@building.Imagen" alt="Card Image" />
                <div class="card-body text-info">
                    <div class="card-text">
                        <label style="font-size:20px; color:#a51313">Precio: <b>$@building.Precio</b></label>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-info">
                    <a asp-action="Details" asp-controller="Home" asp-area="Customer" class="btn btn-outline-info" asp-route-id="@building.Id">
                        <i class="far fa-plus-square"></i> Ver Detalles </a>
                </div>
            </div>
        </div>

    }

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
}