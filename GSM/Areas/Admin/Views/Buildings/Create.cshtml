@model GSM.Models.Building
@using GSM.Extensions
@{
    ViewData["Title"] = "Crear Casa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Crear Casa</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDormitorios" class="control-label"></label>
                <input asp-for="NumeroDormitorios" class="form-control" />
                <span asp-validation-for="NumeroDormitorios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroBano" class="control-label"></label>
                <input asp-for="NumeroBano" class="form-control" />
                <span asp-validation-for="NumeroBano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasLivingComedor" /> @Html.DisplayNameFor(model => model.HasLivingComedor)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasCocinaAmericana" /> @Html.DisplayNameFor(model => model.HasCocinaAmericana)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasPorche" /> @Html.DisplayNameFor(model => model.HasPorche)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Precio" /> @Html.DisplayNameFor(model => model.Precio)
                    </label>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Imagen"></label>
                <input type="file" name="files" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ImagenPlano"></label>
                <input type="file" name="filesPlano" class="form-control" />
            </div>

            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Crear" />
                <a asp-action="Index" class="btn btn-success">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
