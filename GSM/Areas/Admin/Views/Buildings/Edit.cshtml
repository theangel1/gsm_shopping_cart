@model GSM.Models.Building
@using GSM.Extensions
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Editar</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDormitorios" class="control-label"></label>
                <input asp-for="NumeroDormitorios" class="form-control" />
                <span asp-validation-for="NumeroDormitorios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroBano" class="control-label"></label>
                <input asp-for="NumeroBano" class="form-control" />
                <span asp-validation-for="NumeroBano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasLivingComedor" /> @Html.DisplayNameFor(model => model.HasLivingComedor)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasCocinaAmericana" /> @Html.DisplayNameFor(model => model.HasCocinaAmericana)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasPorche" /> @Html.DisplayNameFor(model => model.HasPorche)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Imagen"></label>
                <input type="file" name="files" class="form-control" />
            </div>

            <div class="form-group">
                <img src="@Model.Imagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>

            <div class="form-group">
                <label asp-for="ImagenPlano"></label>
                <input type="file" name="filesPlano" class="form-control" />
            </div>

            <div class="form-group">
                <img src="@Model.ImagenPlano" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-outline-warning" />
                <a asp-action="Index" class="btn btn-outline-info">Volver a lista de Casas</a>
            </div>
        </form>
    </div>
</div>
